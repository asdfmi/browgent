generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Workflow {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  nodes   WorkflowNode[]
  edges   WorkflowEdge[]
  streams WorkflowStream[]
}

model WorkflowNode {
  id         String   @id @default(uuid())
  workflowId String
  name       String
  type       String
  config     Json?
  positionX  Float?
  positionY  Float?
  createdAt  DateTime @default(now())

  workflow   Workflow         @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  outEdges   WorkflowEdge[]   @relation("edge_from")
  inEdges    WorkflowEdge[]   @relation("edge_to")
  outStreams WorkflowStream[] @relation("stream_from")
  inStreams  WorkflowStream[] @relation("stream_to")
}

model WorkflowEdge {
  id          String   @id @default(uuid())
  workflowId  String
  fromNodeId  String
  toNodeId    String
  condition   Json?
  priority    Int?
  createdAt   DateTime @default(now())

  workflow Workflow     @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  fromNode WorkflowNode @relation("edge_from", fields: [fromNodeId], references: [id], onDelete: Cascade)
  toNode   WorkflowNode @relation("edge_to", fields: [toNodeId], references: [id], onDelete: Cascade)
}

model WorkflowStream {
  id         String   @id @default(uuid())
  workflowId String
  fromNodeId String
  toNodeId   String
  createdAt  DateTime @default(now())

  workflow Workflow     @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  fromNode WorkflowNode @relation("stream_from", fields: [fromNodeId], references: [id], onDelete: Cascade)
  toNode   WorkflowNode @relation("stream_to", fields: [toNodeId], references: [id], onDelete: Cascade)
}
